{
  "name": "subsentry",
  "version": "1.0.0",
  "description": "",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "react-start": "react-scripts start",
    "electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run react-build && npm run electron-pack",
    "react-build": "react-scripts build",
    "electron-pack": "electron-builder",
    "test": "react-scripts test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "react-scripts": "^5.0.1",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.2.0",
    "openai": "^5.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.weiphi.subsentry",
    "productName": "SubSentry",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "src/services/database.js",
      "src/services/iconGenerator.js",
      "public/assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "public/assets/subsentry-logo.png"
    },
    "dmg": {
      "title": "SubSentry Installer"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
